<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="fxmlexample.GUIController" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <gridLinesVisible>false</gridLinesVisible>
    
    
    <VBox id="vbox" prefHeight="400" prefWidth="800"
      xmlns:fx="http://javafx.com/fxml"
      >
   <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
      <menus>
         <Menu text="File">
            <items>
               <MenuItem text="New" onAction="#handleNewAction"/>
               <MenuItem text="Open" onAction="#handleOpenAction"/>
               <MenuItem text="Save" onAction="#handleSaveAction"/>
               <MenuItem text="Save As" onAction="#handleSaveAsAction"/>
               <SeparatorMenuItem  />
               <MenuItem text="Exit" onAction="#handleExitAction"/>
            </items>
         </Menu>
         <Menu text="Edit">
            <items>
               <MenuItem text="Rename Project"/>
            </items>
         </Menu>
         <Menu text="Help">
            <items>
               <MenuItem text="Search" disable="true"/>
               <MenuItem text="Online Manual" visible="false"/>
            </items>
         </Menu>
      </menus>
   </MenuBar>
</VBox>
    
</GridPane>

